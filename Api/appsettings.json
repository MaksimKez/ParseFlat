{
  "JwtOptions": {
    "SecretKey": "superSecretKey@345superSecretKey@345",
    "AccessTokenExpiresMinutes": 15,
    "RefreshTokenExpiresHours": 8,
    "Issuer": "blablabla",
    "Audience": "blablabla"
  },
  "Auth": {
    "Cookie": {
      "RefreshTokenName": "refreshToken",
      "ExpirationHours": 7,
      "HttpOnly": true,
      "Secure": true
    },
    "Jwt": {
      "EmailClaimType": "email",
      "NameClaimType": "name"
    },
    "Messages": {
      "PasswordChanged": "Password changed successfully",
      "RefreshTokenMissing": "Refresh token is missing",
      "VerificationLinkSent": "Verification link sent",
      "EmailVerified": "Email successfully verified",
      "VerificationTokenMissing": "Verification token is missing",
      "RefreshTokenNotFound": "Refresh token not found in cookies",
      "EmailNotFoundInToken": "Email not found in token",
      "InvalidTokenFormat": "Invalid token format",
      "NameNotFoundInToken": "Name not found in token"
    }
  },
  "UserProfileClientSettings": {
    "BaseUrl": "https://user-service:8080/api",
    "RetryCount": 3,
    "RetryDelaySeconds": 2
  },
  "NotificationClientSettings": {
    "BaseUrl": "https://notification-service:8080/",
    "RetryCount": 3,
    "RetryDelaySeconds": 2
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=authdb;Port=5432;Database=authdb;Username=postgres;Password=123456789Aa@;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
